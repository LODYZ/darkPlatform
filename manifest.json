{
	"name": "Dark platform",
	"description": "Un'estensione che rende platform un po' diverso",
	"version": "1.1.6",
	"manifest_version": 3,
	"icons": {
		"48": "/assets/icons/48.png",
		"128": "/assets/icons/128.png"
	},
	"permissions":[
		"tabs",
		"activeTab",
		"scripting",
		"storage",
		"notifications"
	],
	"action": {
	  "default_popup": "popup.html",
	  "default_icon": {
		  "48": "/assets/icons/48.png",
		  "128": "/assets/icons/128.png"
	  }
	},
	"web_accessible_resources": [
		{
		  "resources": [ "customCSS.css", "/aceCss/*", "/jsonEditor/vanilla-jsoneditor/*", "/jwerty/*","/assets/images/*","modules/*"],
		  "matches": ["*://*.google.com/*", "*://*/*" ]
		}
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>","<all_urls>"],
			"js": ["inject.js","macro.js"]
		}, {
			"js": ["isolatedStartScript.js"],
			"matches": ["*://*/*/*/main_designer*"],
			"run_at": "document_start"
		  }
		, {
			"world": "MAIN",
			"js": ["worldContentScript.js"],
			"matches": ["*://*/*/*/main_designer*"]
		  }
	],
	"background": {
		"service_worker": "background.js"
	  },
	"host_permissions": [
        "https://raw.githubusercontent.com/LODYZ/darkPlatform/*",
		"https://cdn3.emoji.gg/*"
    ]
}
